<% flows.each do |flow| %>
  <tr>
    <td>
      <%= translated_attribute(flow.name) %>
    </td>
      <td>
        <% if flow.conditions.empty? %>
          <%= icon "alert-line" %>
          <%= link_to t("models.flow.fields.conditions.empty", scope: "decidim.spam_signal"), edit_flow_path(flow) %>
        <% end %>
      </td>
    <td>
      <%= t("#{flow.trigger_type.demodulize.underscore}.title", scope: "decidim.spam_signal.admin.flow") %>
    </td>
    <td class="table-list__actions">
      <%= icon_link_to "pencil-line", edit_flow_path(flow), t("actions.edit", scope: "decidim.spam_signal.admin"), class: "action-icon--edit", method: :get, data: {} %>
      <%= icon_link_to "delete-bin-line", flow, t("actions.destroy", scope: "decidim.spam_signal.admin"), class: "action-icon--remove", method: :delete, data: { confirm: t("actions.confirm_destroy", scope: "decidim.spam_signal.admin") } %>
    </td>
  </tr>
<% end %>
