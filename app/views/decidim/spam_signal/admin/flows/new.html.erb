<% add_decidim_page_title(t(".title")) %>
<div class="item_show__header">
  <h1 class="item_show__header-title">
    <%= t(".title") %>
  </h1>
</div>
<div class="item__edit-form">
  <%= form_with model: flow_form, url: flows_path, html: { class: "form form-defaults" }, method: :post, builder: Decidim::SpamSignal::SpamSettingsFormBuilder do |f| %>
    <%= render partial: "decidim/spam_signal/admin/flows/form", object: f, locals: { form: f , trigger_type: @trigger_type, form_object: flow_form } %>
    <div class="item__edit-sticky">
      <div class="item__edit-sticky-container">
        <%= f.submit t("actions.create", scope: "decidim.spam_signal.admin.flows"), class: "button button__sm button__secondary" %>
      </div>
    </div>
  <% end %>
</div>
