<div class="item_show__header">
  <h1 class="item_show__header-title">
    <%= t("title", scope: "decidim.spam_signal.conditions") %> 
    <%= link_to t("actions.add", scope: "decidim.spam_signal.conditions"), new_condition_path, class: "button button__sm button__secondary" %>
  </h1>
</div>

<% if conditions.any? %>
  <div class="table-scroll">
    <table class="table-list">
    <thead>
      <tr>
        <th><%= t("models.condition.fields.name", scope: "decidim.spam_signal") %></th>
        <th><%= t("models.condition.fields.condition_type", scope: "decidim.spam_signal") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% conditions.each do |condition| %>
        <tr>
          <td>
            <%= translated_attribute(condition.name) %>
          </td>
          <td>
            <%= condition.condition_type ? condition.condition_type : "-" %>
          </td>
          <td class="table-list__actions">
            <%= icon_link_to "zoom-in-line", edit_condition_path(condition), t("actions.browse", scope: "decidim.admin"), class: "action-icon--browse", method: :get, data: {} %>

            <%= icon_link_to "pencil-line", [:edit, condition], t("actions.edit", scope: "decidim.admin"), class: "action-icon--edit", method: :get, data: {} %>

            <% if allowed_to? :destroy, :condition, condition: condition %>
              <%= icon_link_to "delete-bin-line", condition, t("actions.destroy", scope: "decidim.admin"), class: "action-icon--remove", method: :delete, data: { confirm: t("actions.confirm_destroy", condition: "decidim.admin") } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
<% else %>
  <p><%= t("no_conditions", scope: "decidim.spam_signal.conditions") %></p>
<% end %>